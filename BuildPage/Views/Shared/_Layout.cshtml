
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatibile" content="IE=edge, chrome=1" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">

    <title>Firma budowlana Stanley</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/BuildPage.styles.css" asp-append-version="true" />
</head>
<body>
    <div class="header-background">
        <div id="nav" class="sticky-nav">

            <nav class="navbar navbar-expand-lg">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Firma budowlana Stanley</a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                        <span></span>
                        <span></span>
                    </button>
                    <div class="collapse navbar-collapse" id="navbarSupportedContent">
                        <ul class="navbar-nav me-auto mb-2 mb-lg-0 ms-auto">
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Gallery" asp-action="Gallery">Wykonane inwestycje</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link active" aria-current="page" asp-area="" asp-controller="Home" asp-action="Calculators">Kaklulatory</a>
                            </li>
                            
                            <li class="nav-item dropdown link">
                                <a class="nav-link dropdown-toggle " href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Przydatne linki
                                </a>
                                <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                    <li><a class="dropdown-item" target="_blank" href="https://kb.pl/">Kb</a></li>
                                    <li><a class="dropdown-item" target="_blank" href="https://muratordom.pl/">Muratordom</a></li>
                                </ul>
                            </li>
                            
                            @{
                            if (string.IsNullOrEmpty(ViewBag.LoginName))
                            {
                                <li class="nav-item dropdown link">
                                <a class="nav-link active" asp-area="" asp-controller="Login" asp-action="Login">Zaloguj jako admin</a>
                                </li>
                            }
                            else
                            {
                                <li class="nav-item dropdown link">
                                <a class="nav-link active" asp-controller="Login" asp-action="Profil">Profil</a>
                                </li>
                                <li class="nav-item dropdown link">
                                <a class="nav-link active" asp-controller="Login" asp-action="Logout">Wyloguj</a>
                                </li>
                            }
                        }
                        </ul>
                        <form class="d-flex">
                            <button asp-controller="Home" asp-action="Contact" class="btn btn-contact">Kontakt</button>
                        </form>
                        

                    </div>
                </div>
            </nav>
        </div>
        <h1 class="heading">@ViewData["Title"]</h1>
    </div>
    </div>
    </div>
    @RenderBody()

    <footer class="border-top footer text-muted">
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
