@model BuildPage.Models.ChangePassNameModel

@{
    ViewData["Title"] = "Zmiana hasła";
}
@{
    @if (Model.IsResponse)
    {
        if (Model.IsSuccess)
        {
            <div class="alert alert-success">
                @Model.Message
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                @Model.Message
            </div>
        }
    }
}
<h1>Zmiana hasła</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="PassUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Pass" class="control-label">Podaj nowe hasło</label>
                <input asp-for="Pass" class="form-control" type="password"/>
                <span asp-validation-for="Pass" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PassRe" class="control-label">Powtórz nowe hasło</label>
                <input asp-for="PassRe" class="form-control" type="password"/>
                <span asp-validation-for="PassRe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Wróć do profilu</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
