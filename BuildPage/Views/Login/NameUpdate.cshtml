@model BuildPage.Models.ChangePassNameModel

@{
    ViewData["Title"] = "Zmiana nazwy";
}
@{
    @if (Model.IsResponse)
    {
        if (Model.IsSuccess)
        {
            <div class="alert alert-success">
                @Model.Message
            </div>
        }
        else
        {
            <div class="alert alert-danger">
                @Model.Message
            </div>
        }
    }
}
<h1>Zmiana nazwy</h1>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="NameUpdate">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nowa nazwa</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="NameRe" class="control-label">Potwierdź nową nazwę</label>
                <input asp-for="NameRe" class="form-control" />
                <span asp-validation-for="NameRe" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Zapisz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Profil">Wróc do profilu</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
    }
